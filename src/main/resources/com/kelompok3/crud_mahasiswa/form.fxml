<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kelompok3.crud_mahasiswa.AddDataController">
    <children>
      <Label fx:id="label" text="Tambah Data Mahasiswa">
         <VBox.margin>
            <Insets bottom="60.0" />
         </VBox.margin>
      </Label>
        <Label text="Nama">
         <VBox.margin>
            <Insets right="250.0" />
         </VBox.margin></Label>
      <TextField fx:id="nama" promptText="contoh : Albert">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
      <Label text="NIM">
         <VBox.margin>
            <Insets right="250.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="nim" promptText="contoh : 2005130000">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
      <Label text="Kelas">
         <VBox.margin>
            <Insets right="250.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="kelas" promptText="contoh : MI 2020 B">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
        <Button fx:id="secondaryButton" onAction="#switchToHome" text="simpan">
         <VBox.margin>
            <Insets bottom="10.0" top="50.0" />
         </VBox.margin></Button>
      <Button fx:id="delete" mnemonicParsing="false" onAction="#deleteData" text="hapus" textFill="#fc0000">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Button fx:id="back" mnemonicParsing="false" onAction="#back" text="kembali" textFill="#3300ff">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
